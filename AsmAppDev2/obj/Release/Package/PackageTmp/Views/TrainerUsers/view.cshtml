@model IEnumerable<AsmAppDev2.Models.TrainerUser>
@{
	ViewBag.Title = "view";
}

<h2>Profile</h2>

@if (Request.IsAuthenticated && User.IsInRole("Trainer"))
{
	@Html.ActionLink("Update Profile", "Create")
}
<table class="table table-striped">
	<tr>

		<th>Trainer Email</th>
		<th>Trainer UserName</th>
		<th>Trainer FullName</th>
		<th>Working Place</th>
		<th>Phone Number</th>
		<th>Edit</th>


	</tr>
	@foreach (var trainer in Model)
	{
		<tr>
			<th>@trainer.Trainer.Email</th>
			<th>@trainer.Trainer.UserName</th>
			<th>@trainer.Full_Name</th>
			<th>@trainer.Working_Place</th>
			<th>@trainer.Phone</th>
			<th>@Html.ActionLink("Edit", "Edit", new { id = trainer.ID })</th>
		</tr>
	}
</table>