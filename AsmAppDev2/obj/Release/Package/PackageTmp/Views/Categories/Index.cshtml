@model IEnumerable<AsmAppDev2.Models.Category>
@{
	ViewBag.Title = "Index";
}

<h2>Category</h2>

@if (Request.IsAuthenticated && User.IsInRole("Staff"))

{
	@Html.ActionLink("Create New Category", "Create", null, new { id = "OT", style = "color: Red" })
}
<table class="table">
    <tr>
        <th>Name Category</th>
        <th>Description</th>
        @if (Request.IsAuthenticated && User.IsInRole("Staff"))
        {
            <th>Edit</th>
            <th>Delete</th>
        }
    </tr>

	@foreach (var category in Model)
	{
		<tr>
			<td>@category.Name</td>
			<td>@category.Description</td>

			@if (User.IsInRole("Staff"))
			{
				<td>@Html.ActionLink("Edit", "Edit", new { id = category.ID })</td>
				<td>@Html.ActionLink("Delete", "Delete", new { id = category.ID })</td>
			}
		</tr>
	}
</table>
@Html.ActionLink("Back to home", "Index", "Home")