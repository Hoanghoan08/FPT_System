@model IEnumerable<AsmAppDev2.Models.AssignTraineetoCourse>
@{
    ViewBag.Title = "Index";
}

<h2>Assign Trainee to Course</h2>


@if (Request.IsAuthenticated && User.IsInRole("Staff"))
{
    @Html.ActionLink("Assign Trainee to Course", "Create", null, new { id = "OT", style = "color: Red" })
}

<table class="table table-striped">
    <tr>
        <th>Trainee Email</th>
        <th>Trainee UserName</th>
        <th>Course Name</th>
        @if (Request.IsAuthenticated && User.IsInRole("Staff"))
        {
            <th>Delete</th>
        }

    </tr>
    @foreach (var trainee in Model)
    {
        <tr>
            <th>@trainee.Trainee.Email</th>
            <th>@trainee.Trainee.UserName</th>
            <th>@trainee.Course.Name</th>
            @if (Request.IsAuthenticated && User.IsInRole("Staff"))
            {
                <th>@Html.ActionLink("Delete", "Delete", new { id = trainee.ID })</th>
            }
        </tr>
    }
</table>